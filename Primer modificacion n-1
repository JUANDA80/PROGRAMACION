#include <stdio.h>  
void imprime(int);  
void imprime1(int);
int main()          
{
int n=0;            
printf("Indica el numero limite   ");   
scanf("%d", &n);    
imprime(n);  
imprime1(n);       
return 0;           
}                   
void imprime(int b) 
{
int a,c;            
for(a=0; a<=b; a++) 
{
    for(c=1; c<=a; c++)      
        printf("%d\t", c);   
 printf("\n");              
}
}

void imprime1(int n)
{
int i,j;            
for(i=n;i>=0;i--) 
{
    for(j=1; j<i; j++)      
        printf("%d\t", j);   
 printf("\n"); 
}
}
