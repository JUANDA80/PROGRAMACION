#include<stdio.h>
int main (void)
{
	int n,factorial=1,i;
	char salir;
	while (salir!='n'&&salir!='N'){
	printf("Calcula el factorial del numero solicitado\n");
	printf("Introduce el numero por analizar");
	scanf("%d",&n);
	for (i=1;i<=n;i++){
	factorial=factorial*i; 
}
    printf("El factorial de n es: %d \n", factorial);
	printf("Quiere hacer el calculo para otro numero S/N: \n");
	scanf("%s",&salir);
}
    printf("Gracias por utilizar nuestra calculadora factorial \n");
	return 0;
}
