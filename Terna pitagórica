#include <stdio.h>
#include <math.h>
int main (void) 
{
	int co,ca,h;
	printf("Ejercicio de ternas pitagoricas a partir del triangulo rectangulo \n");
	printf("Dame el valor del ancho del rectangulo: \n");
	scanf("d%",&co);
	printf("Dame el valor del largo del rectangulo: \n");
	scanf("d%",&ca);
	while (co<500 & ca<500& h<500)
{
	h=sqrt(co^2+ca^2);
}
printf("La terna pictografica tiene el valor de: %d",ca & co & h);
printf("El valor de la hipotenusa es: %d",h);
printf("El valor del cateto opuesto al cuadrado es: %d",co^2);
printf("El valor del cateto adyacente al cuadrado es: %d",ca^2);
return 0;
}
